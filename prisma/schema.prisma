// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Модель для хранения настроек сайта, таких как курс обмена
model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}

// Статус заказа
enum OrderStatus {
  PENDING
  COMPLETED
}

// Модель для хранения информации о заказах
model Order {
  id                String      @id @default(cuid())
  telegramUsername  String
  telegramName      String
  telegramAvatarUrl String
  stars             Int
  price             Float
  status            OrderStatus @default(PENDING)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}